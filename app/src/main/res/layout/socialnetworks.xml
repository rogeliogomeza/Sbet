<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:id="@+id/LinearLayoutButtomDown"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:gravity="left"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/box2"
        android:layout_width="125dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageButton
            android:background="@mipmap/ic_launcher"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:id="@+id/imageButtom1" />

        <ImageButton
            android:layout_height="35dp"
            android:background="@mipmap/ic_launcher"
            android:id="@+id/imageButton2"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp" />

        <ImageButton
            android:layout_height="35dp"
            android:background="@mipmap/ic_launcher"
            android:id="@+id/imageButton3"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:layout_marginLeft="15dp"
        android:background="@drawable/box2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="125dp">

        <ImageButton
            android:layout_height="35dp"
            android:background="@drawable/socialiconstwitter"
            android:id="@+id/imageButtonTwitter"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp" />

        <ImageButton
            android:background="@drawable/socialiconsinstagram"
            android:id="@+id/imageButtonInstagram"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="35dp" />

        <ImageButton
            android:layout_height="35dp"
            android:background="@drawable/socialiconsfacebook"
            android:id="@+id/imageButtonFacebook"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp" />

    </LinearLayout>

</LinearLayout>