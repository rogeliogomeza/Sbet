<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mainlog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uvm.sbet.Activities.MainlogActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutMainLogButtomsUP">

        <TextView
            android:text="Hola, "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewMainlogLogin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/box2"
            android:layout_weight="2.05"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <Button
            android:text="Cerrar SesiÃ³n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonMainLogin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/buttonMainlogLogout"
            android:fontFamily="sans-serif-medium"
            android:layout_weight="0.37"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white" />
    </LinearLayout>


    <include layout="@layout/socialnetworks"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayoutMainLogButtomsUP"
        android:layout_above="@+id/LinearLayoutButtomDown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/linearLayouMainlogCenter">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayoutMainlogButtonsCenter">

            <Button
                android:text="Resultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMainlogResults"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <Button
                android:text="Apuestas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMainlogBets"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <Button
                android:text="Noticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMainlogNews"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <Button
                android:text="Juegos en Vivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMainlogLives"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textSize="8sp" />

            <Button
                android:text="Mis Apuestas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMainlogMBets"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:id="@+id/linearLayoutMainLogDayNews"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayoutMainButtomsUP"
            android:layout_above="@+id/LinearLayoutButtomDown"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/box3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:text="NOTICIAS DEL DIA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMainDayNews"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:textSize="36sp"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
