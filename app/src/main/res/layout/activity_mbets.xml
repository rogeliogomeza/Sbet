<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mbets"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uvm.sbet.Activities.MBetsActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/linearLayoutMBetsBets"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayoutMBetsButtomsUP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/box3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.76"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:text="APUESTAS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMBetsBets"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:textSize="36sp"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:text="Mis Apuestas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMBets"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:textSize="24sp"
            android:textAlignment="center"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutMBetsButtomsUP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewMBets"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:text="Antiguas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMBetsOlds"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_weight="0.41" />

            <Button
                android:text="Actuales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/buttonMainLogin"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/buttonMBetsNews"
                android:fontFamily="sans-serif-medium"
                android:layout_weight="0.37"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white" />
        </LinearLayout>


    </RelativeLayout>


     </RelativeLayout>

